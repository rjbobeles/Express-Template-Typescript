{
  "name": "express-template-typescript",
  "version": "0.0.1",
  "description": "express-template-typescript",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "cross-env node ./build/index.js",
    "dev": "cross-env ts-node ./src/index.ts --files",
    "dev:nodemon": "cross-env nodemon -w src -e ts,json -x ts-node ./src/index.ts",
    "test": "cross-env API_ENV=mocha --exit",
    "test:watch": "cross-env mocha --watch",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix"
  },
  "keywords": [
    "express",
    "typescript"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/hpp": "^0.2.1",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^16.10.1",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "sinon": "^11.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.2",
    "fs": "^0.0.1-security",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0"
  }
}
